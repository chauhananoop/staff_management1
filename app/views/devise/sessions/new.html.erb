<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <img src="/assets/login.jpg" alt="login" class="login-card-img">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper" style="text-align: center;">
                <img src="http://www.squadmindsinc.com/assets/logo-43e4b708994c8c0d66056d74ae9d78518a123b69697bca1d9846444efb2ca690.png" alt="logo" class="logo" style="width: 150px; height: auto;">
              </div>
              <p class="login-card-description">Sign into your account</p>
              <form action="#!">
                  <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email here" %>
                  </div>
                  <div class="form-group mb-4">
                    <label for="password" class="sr-only">Password</label>
                    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", :placeholder => "Password here" %>
                  </div>
                  <%= f.submit "Log in", :class => "btn btn-block login-btn mb-4" %>
                </form>
                <a href="#!" class="forgot-password-link">Forgot password?</a>
                <p class="login-card-footer-text">Don't have an account? <%= link_to "Register Here", new_registration_path(resource_name), :class => "text-reset"%></p>
                <nav class="login-card-footer-nav">
                  <a href="#!">Terms of use.</a>
                  <a href="#!">Privacy policy</a>
                </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<% end %>
